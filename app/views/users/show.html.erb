<div class="row">
  <div class="column column-25">
    <%= image_tag @user.photo.url, class:"user-photo"%>
      <% if current_user && current_user.id.eql?(@user.id) %>
        <%= link_to 'Update', edit_user_path(@user.id), class:"button" %>
        <%= link_to 'Delete', user_path(@user.id), method: "delete", class:"button delete", data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
  <div class="column">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>Description</strong>
      <%= @user.description %>
    </p>
  </div>

</div>






