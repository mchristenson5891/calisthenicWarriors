
 <% @users.in_groups_of(2, false).each do |group|%>
    <div class="row">
      <% group.each do |user|%>
      <div class="column column-25">
    <%= link_to image_tag( user.photo, class:"user-photo"), user_path(user.id), class:"user-photo" %>
    </div>
  <div class="column">
    <p>
      <strong>Name:</strong>
      <%= user.name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= user.email %>
    </p>
    <p>
      <strong>Description</strong>
      <%= user.description %>
    </p>
  </div>
      <% end %>
    </div>
  <% end%>

